<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TDAH.Flyout.RegisterAdmin"
             Title="Registro de administradores">
    <ContentPage.Content>
        <StackLayout Margin="20">

            <Entry Text="{Binding Nombre}" Placeholder="Nombre" />

            <Entry Text="{Binding ApellidoPaterno}" Placeholder="Apellido Paterno" />

            <Entry Text="{Binding ApellidoMaterno}" Placeholder="Apellido Materno" />

            <Entry Text="{Binding Correo}" Placeholder="Correo Electrónico" />

            <Entry Text="{Binding Contrasena}" Placeholder="Contraseña" IsPassword="True" />

            <Button Text="Registrar" Command="{Binding RegistrarCommand}" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
